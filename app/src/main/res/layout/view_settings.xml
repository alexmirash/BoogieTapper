<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!--tap mode-->
    <LinearLayout
        style="@style/NavItemStyle"
        >
        <TextView
            android:id="@+id/settings_tap_mode_label"
            style="@style/NavLabelStyle"
            android:text="@string/settings_tap_mode_label"
            />
        <Spinner
            android:id="@+id/settings_tap_mode_spinner"
            style="@style/NavSpinnerStyle"
            android:entries="@array/tap_modes"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary"
        />
    <!--unit-->
    <LinearLayout
        style="@style/NavItemStyle"
        >
        <TextView
            android:id="@+id/settings_unit_label"
            style="@style/NavLabelStyle"
            android:text="@string/settings_unit_label"
            />
        <Spinner
            android:id="@+id/settings_unit_spinner"
            style="@style/NavSpinnerStyle"
            android:entries="@array/temp_units"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary"
        />

    <!--stop time-->
    <LinearLayout
        android:id="@+id/settings_refresh_time_item"
        style="@style/NavItemStyle"
        >
        <TextView
            android:id="@+id/settings_refresh_time_label"
            style="@style/NavLabelStyle"
            android:layout_weight="1"
            android:text="@string/settings_refresh_time_label"
            />
        <CheckBox
            android:id="@+id/settings_refresh_time_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:theme="@style/MenuCheckBox"
            />
    </LinearLayout>
    <View
        android:id="@+id/settings_refresh_time_delimiter"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary"
        />
</merge>
