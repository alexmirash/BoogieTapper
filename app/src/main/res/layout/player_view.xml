<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/player_song_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Space
            android:layout_width="@dimen/small_margin"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/player_song_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:freezesText="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            />
        <Space
            android:layout_width="@dimen/small_margin"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/player_id3v2_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            />
        <Space
            android:layout_width="@dimen/minor_margin"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/player_song_bpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <SeekBar
        android:id="@+id/player_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="9999"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/side_margin"
        >
        <TextView
            android:id="@+id/player_song_progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="@dimen/text_size_small"
            />
        <TextView
            android:id="@+id/player_song_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/text_size_small"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/player_button_previous"
            style="@style/PlayerIconButton"
            android:layout_gravity="start"
            app:icon="@drawable/ic_navigate_before_black_24dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/player_button_next"
            style="@style/PlayerIconButton"
            android:layout_gravity="end"
            app:icon="@drawable/ic_navigate_next_black_24dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/player_button_play_pause"
            style="@style/PlayerIconButton"
            android:layout_gravity="center"
            app:icon="@drawable/ic_play_circle_outline_black_24dp"
            />
    </FrameLayout>
</merge>
